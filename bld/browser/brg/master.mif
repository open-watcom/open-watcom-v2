tree_depth = 4

proj_name = merge

merge_autodepends = .autodepend

merge_trmem = 1

!include cproj.mif
!include defrule.mif
!include deftarg.mif
!include trmem.mif

!include $(dwarfr_dir)/client.mif

#
# cflags
#
.c: ../cpp;$(trmem_dir)
.cpp: ../cpp;$(browser_dir)/cpp

inc_dirs = -I"../h" -I"$(browser_dir)/h" $(cli_dwarfr_inc_dirs) -I"$(posix_dir)/h"

extra_cpp_flags     = -DSTANDALONE_MERGER
!ifeq debug 2
extra_cpp_flags     += -DDEBUG -DINSTRUMENTS
!endif

extra_cpp_flags_brmem = $(trmem_cpp_flags)

extra_cxx_flags     = -xs-ew

extra_c_flags_brmem  = $(trmem_cover_cflags)

#
# lflags
#
extra_l_flags        = op stack=16k
extra_l_flags_nt_axp = op undefsok

# explicit rules
#################

#
# EXE
#
!ifeq debug 2
exetarg_objs_debug = debuglog.obj
!endif
exetarg_objs = &
    blip.obj     &
    dietree.obj  &
    dwmerger.obj &
    main.obj     &
    mrabbrev.obj &
    mrdeath.obj  &
    mrdie.obj    &
    mrfile.obj   &
    mrinfo.obj   &
    mrinfpp.obj  &
    mrline.obj   &
    mrnmkey.obj  &
    mroffset.obj &
    mrref.obj    &
    mrreloc.obj  &
    mrstrhdl.obj &
    mrtmchk.obj  &
    patricia.obj &
    strpool.obj  &
    chfile.obj   &
    chbffile.obj &
    cmdparse.obj &
    elffile.obj  &
    mempool.obj  &
    util.obj     &
    wtime.obj    &
    brmem.obj $(trmem_objs) &
    $(exetarg_objs_debug)
exetarg_name = wbrg
!include exetarg.mif
