    dwutils.obj &
    leb128wr.obj
!include libtarg.mif

#
# rc and others
#
./dwmakeab.exe : dwmakeab.c
    @%make echo_bldcl
    $(bld_cl) $[@ -I"$(dwarfw_dir)/h" $(bld_clflags) $(bld_ldflags)

dwabenum.gh dwabinfo.gh : ./dwmakeab.exe
    @%make echo_execute
    $(noecho)$[@

dwabbrev.obj : dwabbrev.c dwabinfo.gh
