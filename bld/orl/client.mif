# ORL library finder.
# ~~~~~~~~~~~~~~~~~~
#

!ifeq bootstrap 1
orl_lib = $(orl_dir)/$(objs_subdir)/orl.lib
!else ifeq $(proj_name)_rtdll 1
#
# ORL run-time DLL used
#
orl_lib = $(orl_dir)/$(objs_subdir).dll/orl.lib
!else
#
# ORL OSI library used
#
orl_lib = $(orl_dir)/osi$(host_cpu)/orl.lib
!endif
