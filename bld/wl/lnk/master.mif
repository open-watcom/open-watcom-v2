proj_name = wlink_lnk

!ifeq host_cpu x64
!ifneq bld_cpu x64
skip_build: .symbolic
!else ifndef bld64host_$(host_os)
skip_build: .symbolic
!endif
!endif

!ifeq host_os dos
wlsystem.lnk : ../specs.sp wlink.lnk
    wsplice -k Pwlsystem $[@ $@
!endif

wlink.lnk : ../wlink.sp ../specs.sp
    wsplice -k Pwlsystem -k $(host_os) -k $(host_cpu) $< $@

clean : .symbolic
    rm -f wlink.lnk wlsystem.lnk
