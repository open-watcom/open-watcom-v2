{$(hdr_dir)}.sp1.sp:
    $(awk) -f $(hdr_dir)/cpyyear.awk -v CPYYEAR=$(curr_year) -v OUTFILE=$@ $[@

!ifdef dirs$(hdr_cpu)
$(dirs$(hdr_cpu)): .EXPLICIT
    mkdir $@
!endif

!include $(incl_dir_$(hdr_cpu))/deps.mif

clean : .SYMBOLIC
    rm -f *.h
    rm -f $(additional_clean)
    rm -rf $(dirs$(hdr_cpu))
