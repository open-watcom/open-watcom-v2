proj_name = os2api

os2api_autodepends = .AUTODEPEND

os2api_distrib_lib = 1

!ifeq host_cpu i86
hdr_cpu = 286
!else
hdr_cpu = $(host_cpu)
!endif

!include cproj.mif
!include defrule.mif

crwatpro_sp = crwatpro.sp

additional_clean = $(crwatpro_sp) depends.dep

incl_dir_286 = ../../incl16
