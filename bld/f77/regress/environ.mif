#
# MAKEINIT vars
#
proj_name = ftest
host_cpu = $(arch)
!ifdef __MSDOS__
!  define host_os dos
!else ifdef __OS2__
!  define host_os os2
!else ifdef __NT__
!  define host_os
!else ifdef __LINUX__
