!endif
!include cproj.mif

#
# linker
#
!ifdef %ftest_linker
!  define linker $+$(%ftest_linker)$-
!else
!  ifndef linker
!    define linker wlink
!  endif
!  ifdef use_dll
!    loaddll wlink wlinkd.dll
!  endif
!endif

#
# output log file location
#
!ifndef log_file
!  ifdef %ftest_log_file
!    define log_file $+$(%ftest_log_file)$-
!  else ifdef %ftest_name
!    define log_file $(ftest_dir)/$+$(%ftest_name)$-.log
!  else
!    define log_file $(ftest_dir)/$(ftest_name).log
!  endif
!endif

first_target : .symbolic start test
    @%null

start : .symbolic
!ifdef dll_loaded
    @echo using !loaddll $(dll_$(arch))
!endif
    @cdsay
    @cdsay >> $(log_file)
    %append $(log_file) TEST $(arch)/$(alt_error)

clean : .symbolic global
    @%null

common_clean : .procedure
    @if exist *.?bj rm -f *.?bj
    @if exist *.err rm -f *.err
    @if exist *.lnk rm -f *.lnk
    @if exist *.lbc rm -f *.lbc
    @if exist *.$(exe) rm -f *.$(exe)
    @if exist *.dll rm -f *.dll
    @if exist *.out rm -f *.out
    @if exist *.sym rm -f *.sym
    @if exist *.dmp rm -f *.dmp
    @if exist *.map rm -f *.map
    @if exist *.lst rm -f *.lst
    @if exist *.log rm -f *.log
    @if exist *.pdb rm -f *.pdb
    @if exist *.pch rm -f *.pch
    @if exist *.lib rm -f *.lib
    @if exist *.res rm -f *.res
