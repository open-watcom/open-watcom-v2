    @$(cc) $(cflags) $(extra_c_flags_$[&) $(inc_path) -fo=$@ $[@
!endif

$(dirs):
    @if not exist $@ @mkdir $@

clean: .SYMBOLIC
    rm -f *.obj *.lbc *.lib *.tmp *.err *.pch
    rm -rf $(dirs)

