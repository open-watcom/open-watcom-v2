directx/dinpstat.obj: directx/dinpstat.c
!ifeq verbose 1
    $(cc) $(cflags) $(extra_c_flags_$[&) $(inc_path) -fo=$@ $[@
!else
    @echo cc $@
    @$(cc) $(cflags) $(extra_c_flags_$[&) $(inc_path) -fo=$@ $[@
!endif

directx/dxguid.obj: directx/dxguid.c
!ifeq verbose 1
