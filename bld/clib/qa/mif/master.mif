pls_3s.exe : $(srcfile)
    $(cc_386) $[@ $(comp_opts) $(comp_i86) -mf -3s -bt=dos -d__PHARLAP__
    wlink SYSTEM pharlap $(link_opts) $(link_i86) FILE $^*
    $(pharlap)bind386 $(pharlap)run386b $^*.exp -exe $^*.exe>nul
    @del $^*.exp>nul
    @del $^*.obj>nul

