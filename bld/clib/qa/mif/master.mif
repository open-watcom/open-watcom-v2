    $(cc_386) $[@ $(comp_opts) $(comp_i86) -mf -3s -bt=dos -d__X32__
    wlink $(link_opts) $(link_i86) SYSTEM x32s FILE $^* libpath $(flashtek)
    $(flashtek)x32fix $^*.exe>nul
    @del $^*.obj>nul

