bld_ver      = $(%OWBLDVER)
bld_ver_str  = $(%OWBLDVERSTR)
patch_level  = 0
contrib_dir  = $(%OWROOT)/contrib
build_dir    = $(%OWROOT)/build
src_dir      = $(%OWSRCDIR)
docs_dir     = $(%OWDOCSDIR)

bin_subdir   = $(%OWOBJDIR)
!ifdef %OWDLLOBJDIR
dll_subdir   = $(%OWDLLOBJDIR)
!else
dll_subdir   = dllobjs
!endif

verbose      = $(%OWVERBOSE)

# don't ask, just nuke the files
.ERASE

mif_path     = $(build_dir)/mif

.mif: $(mif_path)

!ifeq %OWTOOLS WATCOM
!define __WATCOM_TOOLS__
!else ifeq %OWTOOLS VISUALC
!define __MSVC_TOOLS__
!else ifeq %OWTOOLS GCC
!define __GCC_TOOLS__
!else ifeq %OWTOOLS CLANG
!define __CLANG_TOOLS__
!else ifeq %OWTOOLS INTEL
!define __INTEL_TOOLS__
!else
# if not defined or unknow value, default to WATCOM
!define __WATCOM_TOOLS__
!endif

!ifdef %BOOTSTRAP_CPU
bld_cpu = $(%BOOTSTRAP_CPU)
bld_os = $(%BOOTSTRAP_OS)
!else ifdef __MSDOS__
bld_cpu = 386
bld_os = dos
!else ifdef __OS2__
bld_cpu = 386
bld_os = os2
!else ifdef __NT386__
bld_cpu = 386
bld_os = nt
!else ifdef __NTX64__
bld_cpu = x64
bld_os = nt
bld64host_nt = 1
bld64host_osi = 1
!else ifdef __NTAXP__
bld_cpu = axp
bld_os = nt
!else ifdef __LINUX386__
bld_cpu = 386
bld_os = linux
!else ifdef __LINUXX64__
bld_cpu = x64
bld_os = linux
bld64host_linux = 1
bld64host_osi = 1
!else ifdef __LINUXMIPS__
bld_cpu = mps
bld_os = linux
!else ifdef __LINUXPPC__
bld_cpu = ppc
bld_os = linux
!else ifdef __LINUXARM__
bld_cpu = arm
bld_os = linux
!else ifdef __BSD386__
bld_cpu = 386
bld_os = bsd
!else ifdef __BSDX64__
bld_cpu = x64
bld_os = bsd
bld64host_bsd = 1
bld64host_osi = 1
!else ifdef __BSDPPC__
bld_cpu = ppc
bld_os = bsd
!else ifdef __HAIKU386__
bld_cpu = 386
bld_os = haiku
!else ifdef __HAIKUX64__
bld_cpu = x64
bld_os = haiku
bld64host_haiku = 1
bld64host_osi = 1
!else ifdef __HAIKUPPC__
bld_cpu = ppc
bld_os = haiku
!else ifdef __OSX386__
bld_cpu = 386
bld_os = osx
!else ifdef __OSXX64__
bld_cpu = x64
bld_os = osx
bld64host_osx = 1
bld64host_osi = 1
!else ifdef __OSXPPC__
bld_cpu = ppc
bld_os = osx
!else ifdef __OSXARM__
bld_cpu = arm
bld_os = osx
!endif

!ifdef nulldevice_$(bld_os)
nulldevice = $(nulldevice_$(bld_os))
!else ifdef __UNIX__
nulldevice = /dev/null
!else
nulldevice = nul
!endif

